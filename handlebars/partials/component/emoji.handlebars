<div class="emoji" data-emoji="emoji">
	<div class="emoji-header" role="tablist">
		{{#each emoji}}
		<button type="button" class="button emoji-tab{{#eq @index compare=0}} active{{/eq}}" aria-controls="{{cat}}" role="tab" data-toggle="emojiTab" data-target="emoji{{add @index 1}}">{{icon}}</button>
		{{/each}}
	</div>
	<div class="emoji-content">
		{{#each emoji}}
		<div data-emoji-id="emoji{{add @index 1}}" class="emoji-panel{{#eq @index compare=0}} active{{/eq}}" role="tabpanel">
			{{#each list}}
			<button type="button" class="button emoji-icon" data-toggle="emojiIcon">{{icon}}</button>
			{{/each}}
		</div>
		{{/each}}
	</div>
</div>
