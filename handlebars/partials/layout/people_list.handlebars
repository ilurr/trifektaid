{{#each channel}}
{{#gte @index compare=../index_start}}
{{#gte @index compare=../index_end}}
{{else}}
<div class="people-item">
	<div class="people-row">
		<div class="people-img">
			<a href="profile-view.html">
				<img src="{{avatars.[0].url}}" alt="{{avatars.first_name}}">
			</a>
		</div>
		<div class="people-info">
			<h4 class="people-name"><a href="profile-view.html">{{first_name}} {{last_name}}</a></h4>
			<div class="people-bio">{{bio}}</div>
		</div>
	</div>
	<div class="people-action">
		{{#eq @index compare=0}}
		{{>button type="follow" name="btn-follow" label="Following"}}
		{{else}}
		{{>button type="follow" name="btn-follow" label="Follow"}}
		{{/eq}}
	</div>
</div>
{{/gte}}
{{/gte}}
{{/each}}
