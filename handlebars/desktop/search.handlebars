<!DOCTYPE html>
<html lang="en">

{{>head font="link"}}

<body>
	<!-- s: root -->
	<div class="root">

		{{>header login=true}}
		
		<!-- grid -->
		<div class="grid">

			<div class="grid-flex">

				<div class="grid-col -nav">
					{{>nav active="Disscover"}}
				</div>

				<div class="grid-col -wide">

					<div class="search box">
						<div class="search-content">Search: <span>"Cycling"</span></div>
					</div>
					
					<!-- search people -->
					{{!-- <h2 class="title-medium">People</h2> --}}

					<div class="people box">
						<div class="people-block">
							<div class="people-list">
								{{>people_list channel=people index_start=0 index_end=5}}
							</div>
						</div>
						{{!>more label="Load more"}}
					</div>

					<!-- search feeds -->
					{{!-- <h2 class="title-medium">Post</h2> --}}

					{{>feeds channel=people.[0] search="true"}}

					{{>feeds channel=people.[1] search="true"}}

					{{>feeds channel=people.[2] search="true"}}

				</div>

				<div class="grid-col -aside">
					{{>sidebar}}
				</div>

			</div>

		</div>

	</div>
	<!-- e: root -->

{{>js}}
</body>
</html>
