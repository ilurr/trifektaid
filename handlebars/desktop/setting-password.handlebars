<!DOCTYPE html>
<html lang="en">

{{>head font="link"}}

<body>
	<!-- s: root -->
	<div class="root">

		{{>header login=true}}
		
		<!-- grid -->
		<div class="grid">

			<div class="grid-flex">

				<div class="grid-col -nav">
					{{>nav active="Setting"}}
				</div>

				<div class="grid-col -wide">

					<!-- setting -->
					<div class="setting box">
						<h2 class="title">Change Password</h2>
						<form action="setting.html">
							<div class="user-form">
								<div class="user-form-row">
									{{>input type="password" label="Current Password" name="current-password"}}
									{{>input type="password" label="New Password" name="new-password"}}
									{{>input type="password" label="Confirm New Password" name="confirm-new-password" txthint="Password must content at least 8 characters."}}
								</div>
								<div class="user-form-action">
									{{>button type="submit" name="btn-save-user" class="-primary" label="Save"}}
								</div>
							</div>		
						</form>
					</div>

				</div>

				<div class="grid-col -aside">
					{{>sidebar}}
				</div>

			</div>

		</div>

		<!-- notify message -->
		{{>panel_alert}}

	</div>
	<!-- e: root -->

{{>js}}
</body>
</html>
