<!DOCTYPE html>
<html lang="en">

{{>head font="link"}}

<body>
	<!-- s: root -->
	<div class="root">

		{{>header login=true}}
		
		<!-- grid -->
		<div class="grid">

			<div class="grid-flex">

				<div class="grid-col -nav">
					{{>nav active="Setting"}}
				</div>

				<div class="grid-col -wide">

					<!-- setting -->
					<div class="setting box">
						<h2 class="title">Change Email</h2>
						<form action="setting.html">
							<div class="user-form">
								<div class="user-form-row">
									{{>input type="text" label="Current Email" name="current-email" txtVal="user@gmail.com" disabled="true"}}
									{{>input type="text" label="New Email" name="new-email"}}
									{{>input type="text" label="Confirm New Email" name="confirm-new-email" txterror="New email doesn't match" txthint="New email doesn't match"}}
								</div>
								<div class="user-form-action">
									{{>button type="submit" name="btn-save-user" class="-primary" label="Save"}}
								</div>
							</div>		
						</form>
					</div>

				</div>

				<div class="grid-col -aside">
					{{>sidebar}}
				</div>

			</div>

		</div>

	</div>
	<!-- e: root -->

{{>js}}
</body>
</html>
