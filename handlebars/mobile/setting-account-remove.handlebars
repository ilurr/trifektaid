<!DOCTYPE html>
<html lang="en">

{{>head font="link" mobile="true"}}

<body>
	<!-- s: root -->
	<div class="root">

		{{>header_mobile login=true}}
		
		<!-- grid -->
		<div class="grid">

			<div class="grid-flex">

				<div class="grid-col -nav">
					{{>nav_mobile active="Profile"}}
				</div>

				<div class="grid-col -wide">

					{{>title section="true" title="Delete Account"}}

					<!-- setting -->
					<div class="setting box">
						<form action="setting.html">
							<div class="user-form">
								<div class="user-form-row">
									{{>input type="text" label="Your Email Account" name="remove-email"}}
									{{>input type="password" label="Password" name="remove-password"}}
								</div>
								<div class="user-form-action">
									{{>button type="modal" name="btn-remove-user" class="-primary" label="Delete Account" dataAttrTarget="#modalDeleteAccount"}}
								</div>
							</div>
						</form>
					</div>

					<!-- modal confirm remove account -->
					<form action="wp-bye.html">
						<div id="modalDeleteAccount" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="deleteAccount" aria-hidden="true">
							<div class="modal-dialog">
								<div class="modal-content">
									<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span class="icon-close" aria-hidden="true"></span></button>
									<div class="modal-header">
										<h5 class="modal-title" id="deleteAccount">Delete Account</h5>
									</div>
									<div class="modal-body">
										<div class="modal-text">Are you sure about deleting your account permanently?</div>
									</div>
									<div class="modal-footer">
										<button type="button" class="button" data-dismiss="modal">Cancel</button>
										<button class="button -primary">Delete Account</button>
									</div>
								</div>
							</div>
						</div>
					</form>
					
				</div>

			</div>

		</div>

		<!-- notify message -->
		{{>panel_alert}}

		<!-- modal apps -->
		{{>app_modal}}

	</div>
	<!-- e: root -->

{{>js mobile="true"}}
</body>
</html>
