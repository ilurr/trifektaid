<!DOCTYPE html>
<html lang="en">

{{>head font="link" mobile="true"}}

<body>
	<!-- s: root -->
	<div class="root">

		{{>header_mobile login=true}}
		
		<!-- grid -->
		<div class="grid">

			<div class="grid-flex">

				<div class="grid-col -nav">
					{{>nav_mobile active="Profile" showAvatar="showAvatar"}}
				</div>

				<div class="grid-col -wide">

					{{>title section="true" title="Profile" button="setting"}}

					<!-- pofile header -->
					{{>profile_header edit="true"}}

					<!-- feeds -->
					{{>feeds mobile="true" channel=people.[0]}}

					{{>feeds mobile="true" channel=people.[1] comment="true"}}

					{{>feeds mobile="true" channel=people.[2] comment="true"}}

					{{>feeds mobile="true" channel=people.[3] comment="true"}}

				</div>

			</div>

		</div>

		<!-- notify message -->
		{{>panel_alert}}

		<!-- modal apps -->
		{{>app_modal}}

	</div>
	<!-- e: root -->

{{>js mobile="true"}}

<script>
// dummy alert succes / failed message
let msg = document.getElementById('success-msg');
if(!!msg) {
	setTimeout(function(){
		$('#success-msg').fadeIn(300).delay(3000).fadeOut(1000);
	}, 2000);
}
</script>
</body>
</html>
