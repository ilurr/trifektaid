<!DOCTYPE html>
<html lang="en">

{{>head font="link" mobile="true"}}

<body>
	<!-- s: root -->
	<div class="root">

		{{>header_mobile login=true}}
		
		<!-- grid -->
		<div class="grid">

			<div class="grid-flex">

				<div class="grid-col -nav">
					{{>nav_mobile active="Discover"}}
				</div>

				<div class="grid-col -wide">

					{{>title section="true" title="Suggestion For You"}}

					<!-- people -->
					<div class="people box">
						<div class="people-block">
							<div class="people-list">
								{{>people_list channel=people index_start=0 index_end=10}}
							</div>
							{{>more label="Load more"}}
						</div>
					</div>

				</div>

			</div>

		</div>

		<!-- notify message -->
		{{>panel_alert}}

		<!-- modal apps -->
		{{>app_modal}}

	</div>
	<!-- e: root -->

{{>js mobile="true"}}
</body>
</html>
